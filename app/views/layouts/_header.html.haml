.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "#"} UberMatcher
      .btn-group.pull-right
        %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          - if user_signed_in?
            %i.icon-user 
            = current_user.email
          - else
            %i.icon-user 
            Sign in or Signup
          / %span.care
        %ul.dropdown-menu
          - if user_signed_in?
            %li
              %a{:href => "#"} Settings
            %li.divider
            %li
              /%a{:href => "#"} Sign Out
              = link_to("Sign out", destroy_user_session_path)
          - else
            %li
              %a{:href => "#"} Sign Up
            %li.divider
            %li
              %a{:href => "#"} Sign in
              = link_to("Sign In", new_user_session_path)
      .nav-collapse
        %ul.nav
          %li.active
            %a{:href => "#"} Home
          %li
            %a{:href => "#about"} About
          %li
            %a{:href => "#contact"} Contact