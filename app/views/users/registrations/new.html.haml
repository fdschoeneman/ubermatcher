- content_for :column1 do
  %blockquote.pull-right
- content_for :column2 do
  .row-fluid
  %legend Step 1: Sign up All we need is your email address.
  = simple_form_for(resource, :as => resource_name, html: { class: 'form-horizontal' }, :url => user_registration_path(resource)) do |f|
    - if f.error_notification
      .alert.alert-error.fade.in
        %a.close{"data-dismiss" => "alert", :href => "#"} Ã—
        = f.error_notification
    = f.input :email
    .form-actions
      = f.button :submit, "Sign up to get a confirmation email", class: 'btn-large btn-primary'
    = render :partial => "links"